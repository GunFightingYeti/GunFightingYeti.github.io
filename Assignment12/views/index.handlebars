<div class="container">
  <div class="jumbotron jumbotron-fluid" id="burgerImg">
    <div class="container">
      <h1 class="display-4">Burger<br>Heaven</h1>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-md-6">
        <h2>Burgers that you want to eat</h2>
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-md-6">
        <h2>Burgers that you've eaten</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="container mb-3">
    <div class="row mb-5">
      <h2>Add a burger</h2>
      <form class="create-form form-control">
        <div class="form-group">
          <label for="burgName">Burger Name:</label>
          <input type="text" id="burgName" name="name" value="" required>
          <button type="submit" class="btn btn-outline-success ml-3"><i class="fas fa-plus"></i> Add burger</button>
        </div>
      </form>
    </div>
  </div>

</div>