<div class="container">
    <div id="articleBackground">
        <h1>Saved Articles</h1>
            <ul>
                {{#each dbSaved}}
                    <li class="article" data-id="{{this._id}}">
                    <a href="https://screenrant.com{{this.link}}" target="_blank"><h2>{{this.title}}</h2></a>
                    <a href="https://screenrant.com{{this.link}}" target="_blank"></a><img src={{this.image}} alt="{{this.title}}"></a>
                    <p>{{this.excerpt}}</p>
                    <a href="https://screenrant.com{{this.link}}" target="_blank"><h3>Read the whole story</h3></a>
                    <a class="btn btn-outline-danger remove" data-id="{{this._id}}">Remove from Saved</a>
                    <a class="btn btn-outline-info note" data-id="{{this._id}}" data-toggle="modal" data-target="#noteModal">Make a Note</a>
                    </li>
                {{/each}}
            </ul>
        <a class="nav-link" href="/saved">Return to top</a>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Make a Note</h5>
      </div>
      <div class="modal-body">
            <ul>
                {{#each dbNote}}
                    <li class="article Bob" data-id="{{this._id}}">
                    <a href="https://screenrant.com{{this.link}}" target="_blank"><h2>{{this.title}}</h2></a>
                    <p>{{this.excerpt}}</p>
                    <a href="https://screenrant.com{{this.link}}" target="_blank"><h3>Read the whole story</h3></a>
                    <a class="btn btn-outline-danger remove" data-id="{{this._id}}">Remove from Saved</a>
                    <a class="btn btn-outline-info note" data-id="{{this._id}}" data-toggle="modal" data-target="#noteModal">Make a Note</a>
                    </li>
                {{/each}}
            </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
